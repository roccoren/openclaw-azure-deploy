# ============================================================================
# OpenClaw Azure Deployment - Environment Variables
# ============================================================================
# Copy this file to .env and fill in the values specific to your deployment
# Never commit secrets to git; use Azure Key Vault instead
# ============================================================================

# ============================================================================
# Azure Configuration
# ============================================================================

# Azure Subscription ID (get from: az account show --query id)
AZURE_SUBSCRIPTION_ID="0c8290d6-2183-4098-adba-378401263941"

# Azure Resource Group name (will be created if doesn't exist)
AZURE_RESOURCE_GROUP="openclaw-rg"

# Azure location (westus2, eastus, etc.)
AZURE_LOCATION="westus2"

# Azure Container Registry name (must be globally unique, lowercase alphanumeric)
AZURE_ACR_NAME="openclawacr"

# Azure Key Vault name (must be globally unique, lowercase alphanumeric)
AZURE_KEYVAULT_NAME="openclaw-kv"

# ============================================================================
# Docker Image Configuration
# ============================================================================

# Full Docker image name (registry/repo:tag)
DOCKER_IMAGE="${AZURE_ACR_NAME}.azurecr.io/openclaw:latest"

# Or use your Docker Hub image
# DOCKER_IMAGE="myusername/openclaw:latest"

# ============================================================================
# OpenClaw Gateway Configuration
# ============================================================================

# Gateway bind address (0.0.0.0 for all, 127.0.0.1 for localhost only)
OPENCLAW_GATEWAY_BIND="0.0.0.0"

# Gateway port
OPENCLAW_GATEWAY_PORT="18789"

# Log level (trace, debug, info, warn, error)
OPENCLAW_LOG_LEVEL="info"

# Primary AI model
# Options: github-copilot/claude-haiku-4.5, github-copilot/gpt-5.2-codex, etc.
OPENCLAW_MODEL_PRIMARY="github-copilot/claude-haiku-4.5"

# Backup model (optional)
OPENCLAW_MODEL_BACKUP=""

# ============================================================================
# Secrets (Use Azure Key Vault in production, not here!)
# ============================================================================

# Gateway authentication token (leave blank to auto-generate)
# Generate one: openssl rand -hex 32
GATEWAY_TOKEN=""

# Anthropic API key (for Claude access)
# Get from: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY="sk-ant-YOUR-API-KEY-HERE"

# ============================================================================
# Channel Integrations (Optional)
# ============================================================================

# Microsoft Teams
TEAMS_APP_ID=""
TEAMS_APP_PASSWORD=""
TEAMS_ENABLED="false"

# Slack
SLACK_BOT_TOKEN=""
SLACK_APP_TOKEN=""
SLACK_ENABLED="false"

# Telegram
TELEGRAM_BOT_TOKEN=""
TELEGRAM_ENABLED="false"

# Discord
DISCORD_BOT_TOKEN=""
DISCORD_ENABLED="false"

# Google Chat
GOOGLECHAT_WEBHOOK_URL=""
GOOGLECHAT_ENABLED="false"

# ============================================================================
# Deployment Configuration
# ============================================================================

# Environment (dev, staging, prod)
AZURE_ENVIRONMENT="prod"

# Container App name prefix
CONTAINER_APP_PREFIX="openclaw"

# Enable auto-scaling
ENABLE_AUTO_SCALING="true"

# Auto-scale settings
MIN_REPLICAS="1"
MAX_REPLICAS="3"

# Enable Application Insights monitoring
ENABLE_APP_INSIGHTS="true"

# Enable Azure Managed Identity
ENABLE_MANAGED_IDENTITY="true"

# ============================================================================
# Storage Configuration
# ============================================================================

# Enable persistent storage (Azure Files)
ENABLE_PERSISTENT_STORAGE="true"

# Storage account name (must be globally unique, lowercase alphanumeric)
STORAGE_ACCOUNT_NAME="openclawstorage"

# Storage share name
STORAGE_SHARE_NAME="workspace"

# Workspace mount path inside container
WORKSPACE_MOUNT_PATH="/data/workspace"

# ============================================================================
# Advanced Configuration
# ============================================================================

# Browser automation (enable Chromium)
ENABLE_BROWSER="true"

# Enable debug logging
DEBUG="false"

# Startup timeout (seconds)
STARTUP_TIMEOUT="120"

# Health check interval (seconds)
HEALTH_CHECK_INTERVAL="30"

# Health check timeout (seconds)
HEALTH_CHECK_TIMEOUT="10"

# ============================================================================
# Deployment Flags (for deploy.sh)
# ============================================================================

# Build Docker image before deployment
BUILD_IMAGE="true"

# Push to ACR before deployment
PUSH_TO_ACR="true"

# Create resource group if it doesn't exist
CREATE_RESOURCE_GROUP="true"

# Skip confirmation prompts
AUTO_APPROVE="false"

# ============================================================================
# Notes
# ============================================================================

# 1. Keep this file in .gitignore - never commit secrets to git
# 2. Use Azure Key Vault for production secrets (not this file)
# 3. Run ./scripts/setup-secrets.sh to populate Key Vault
# 4. Run ./scripts/validate-deployment.sh to check configuration
# 5. See README.md for detailed setup instructions
