{
  "$schema": "https://raw.githubusercontent.com/openclaw/openclaw/main/schemas/gateway-config.schema.json",
  "version": "1.0.0",
  "gateway": {
    "host": "0.0.0.0",
    "port": 18789,
    "logLevel": "info",
    "cors": {
      "enabled": true,
      "origins": ["*"],
      "methods": ["GET", "POST", "PUT", "DELETE", "OPTIONS"],
      "headers": ["Content-Type", "Authorization", "X-Gateway-Token"]
    }
  },
  "auth": {
    "type": "token",
    "tokenEnvVar": "GATEWAY_TOKEN",
    "allowAnonymous": false
  },
  "workspace": {
    "path": "/data/workspace",
    "configPath": "/data/config",
    "logsPath": "/data/logs",
    "cachePath": "/data/cache"
  },
  "agent": {
    "model": "claude-sonnet-4-20250514",
    "maxTokens": 8192,
    "temperature": 0.7,
    "systemPrompt": null,
    "thinking": {
      "enabled": false,
      "level": "low"
    }
  },
  "browser": {
    "enabled": true,
    "executablePath": "/usr/bin/chromium",
    "headless": true,
    "args": [
      "--no-sandbox",
      "--disable-setuid-sandbox",
      "--disable-dev-shm-usage",
      "--disable-gpu",
      "--disable-software-rasterizer"
    ]
  },
  "rateLimit": {
    "enabled": true,
    "windowMs": 60000,
    "maxRequests": 60
  },
  "healthCheck": {
    "enabled": true,
    "path": "/health",
    "interval": 30000
  },
  "metrics": {
    "enabled": true,
    "path": "/metrics"
  },
  "logging": {
    "format": "json",
    "timestamps": true,
    "includeRequestId": true,
    "redactSecrets": true
  },
  "azure": {
    "enabled": true,
    "useManagedIdentity": true,
    "keyVaultIntegration": true,
    "applicationInsights": {
      "enabled": true,
      "connectionStringEnvVar": "APPLICATIONINSIGHTS_CONNECTION_STRING"
    }
  }
}
